@model todolist_app.Models.TodoItem

@{
    ViewData["Title"] = "Edit";
}
<style>

    .edit-container {
        padding: 20px;
    }
    .edit-container .row{
        padding: 10px;
    }
    .edit-container .form-group {
        padding: 5px 0;
    }

</style>


<div class="container edit-container">
        <div class="title" >
            <h1><strong>Edit </strong> @Model.Name (ID: @Model.Id)</h1>
            <hr />
        </div>
        <form asp-action="Edit" style="padding: 10px">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsComplete" /> @Html.DisplayNameFor(model => model.IsComplete)
                </label>
            </div>
            <div class="form-group" style="float:right">
                <button class="btn btn-secondary" asp-action="Index">
                    <i class="fa fa-2xs fa-x"></i>
                    Discard Changes
                </button>
                <button class="btn btn-primary" type="submit">  
                    <i class="fa fa-2xs fa-pen-to-square"></i>
                    Edit
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
